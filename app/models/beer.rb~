class Beer < ActiveRecord::Base
	belongs_to :brewery
	has_many :ratings, dependent: :destroy
	
	def summa
		return ratings.count
	end
	
	def average_rating
		t = ratings.map(&:score)
		a = t.sum
		return a.to_f / ratings.count.to_f
	end

	def to_s
	  return self.name + ", " + self.brewery.name
	end
end

